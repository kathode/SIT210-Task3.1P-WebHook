#include <Adafruit_DHT.h>
#define DHTPIN 2    
#define DHTTYPE DHT22


DHT dht(DHTPIN, DHTTYPE);

void setup() {
    Serial.begin(9600); 

	dht.begin();
  
}

void loop() {
  String temp = String(dht.getTempCelcius());
  Particle.publish("temp", temp, PRIVATE);
  delay(30000);               // Wait for 30 seconds

}

